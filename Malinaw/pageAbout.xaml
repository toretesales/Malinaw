<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Malinaw.pageAbout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Malinaw"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer
            Grid.Column="0"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Width="400" HorizontalAlignment="Left">
                <Grid
                    Height="580"
                    Margin="0,0,0,10"
                    Padding="20"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="6">

                    <TextBlock
                        Margin="0,0,20,0"
                        HorizontalAlignment="Left"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="About" />
                    <TextBlock
                        Margin="0,52"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="30"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        Text="Malinaw 1.0" />
                    <TextBlock
                        Margin="0,128"
                        FontSize="14"
                        Text="v1.0 Pierce, Build 010725A&#x0a;&#x0a;An image converter using different image libraries.&#x0a;&#x0a;Copyright (C) 2025 ToreteSales of Praxus.&#x0a;&#x0a;This program is free software but it is distributed with absolutely no warranty or liability regardless if it fits a purpose or merchantibility of any kind. See the General Public License v3.0 or later for details."
                        TextWrapping="Wrap" />
                    <HyperlinkButton
                        x:Name="linkToImageMagick"
                        Margin="0,0,0,68"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="ImageMagick.org"
                        NavigateUri="https://imagemagick.org/" />
                    <HyperlinkButton
                        x:Name="linkToJ2P"
                        Margin="0,0,0,36"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="Jpeg2Png"
                        NavigateUri="https://github.com/victorvde/jpeg2png" />
                    <HyperlinkButton
                        x:Name="linkToMalinaw"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="ToreteSales GitHub"
                        NavigateUri="https://github.com/toretesales/Malinawwf" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

 
    </Grid>
</Page>
